<head>
    <link rel="stylesheet" href="/style" />
</head>

<!-- ### ARQUIVO DO HEADER ### -->
<header>
    <%- include('partials/header') %>
</header>
    
<!-- ### CORPO DO INDEX ### -->
<section class="main">
    <div class="main-principal">
        <div class="principal">
            <div class="principal-left">
                <h1>Site para o seu negócio</h1>
                <h2>Seja visto além do seu horizonte</h2>
            </div>
        </div>
    </div>

    <div class="main-servicos">
        <div class="servicos">
            <div>Cabeçalho</div>
            <div class="servicos-items">
                <div class="servicos-items-tipos">Tipo 1</div>
                <div class="servicos-items-tipos">Tipo 2</div>
                <div class="servicos-items-tipos">Tipo 3</div>
            </div>
            <div>rodapé</div>
        </div>
    </div>

    <div class="main-form">
        <div class="form">
            <div class="form-left">
                <h3>Imagem</h3>
                <img src="/public/img/back_main.jpg" alt="">
            </div>
            <div class="form-right">
                <h1>Formulário de Lead</h1>
            <form method="POST" action="/submit">
                <label for="nome">Nome:</label><br>
                <input type="text" id="nome" name="nome" required><br><br>

                <label for="email">E-mail:</label><br>
                <input type="email" id="email" name="email" required><br><br>

                <label for="whats">WhatsApp:</label><br>
                <input type="text" id="whats" name="whats" required><br><br>

                <button type="submit">Enviar</button>
            </form>
            </div>
                      
        </div>
    </div>

    <div class="main-portifolio">
        <div class="portifolio">
            <div class="slideshow">
               <img id="slide" src="images/img1.jpg" alt="Slideshow">
            </div>
        </div>
    </div>

    <div class="main-planos">
        <div class="planos">
            <div class="planos-item">
                <img src="/public/img/back_main.jpg" alt="">
                <h4 class="planos-item-h4">Mensal</h4>
                <p class="planos-item-p">R$ 29,90</p>
            </div>
            <div class="planos-item"></div>
            <div class="planos-item"></div>
        </div>
    </div>

</section>

<script src="/slides"></script>









<!-- ### ARQUIVO DO FOOTER ### -->
<footer>
    <%- include('partials/footer') %>
</footer>
